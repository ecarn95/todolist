
<div id="myDIV" class="header">
  <h2 style="margin:5px" class="logout">My To Do List</h2>
  <br><%= link_to "Log Out", destroy_user_session_path, method: :delete %>


 <%= form_for(Todo.new) do |f| %>
    <%= f.text_field :content, class: 'input' %>
    <%= f.submit 'Add', class: 'addBtn' %>
<% end %>


</div>

<ul id="myUL">
  <% @todos.each do |todo| %>
    <li>
    <% if todo.checked == false %>
      <%= link_to todos_check_todos_path(:id => todo.id) do %>
        <div style="width: 90%;" class="divinline"><%= todo.content %></div>  
      <% end -%>
    <% else -%>
      
        <%= link_to todos_check_todos_path(:id => todo.id) do %>
        <div style="width: 90%;" class="divinline"><strike><%= todo.content %></strike></div>  
      <% end -%>
    <% end -%>

    <%= link_to todo_path(todo), method: :delete, data: { confirm: 'Are You Sure?' } do %>
     <span class="close">x</span>
    <% end -%>
    </li>
  <% end -%>
</ul>